             xmlns:data="clr-namespace:MAUI_IOT.Models.Data"
             xmlns:viewmodel="clr-namespace:MAUI_IOT.ViewModels"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             x:DataType="viewmodel:LessonnViewModel"
             x:Class="MAUI_IOT.Views.TabViewLessonView.AnalysisTab2"
             Padding="10">

    <ContentView.Content>
        <Grid x:Name="Content" RowDefinitions="Auto, *" ColumnDefinitions="*">
            <Grid ColumnDefinitions="*, *, *, *, *, *" Grid.Row="0" Grid.Column="0">
                <Button Text="Load" Clicked="Button_Clicked" Grid.Column="5"/>
            </Grid>
            
            <Grid x:Name="gridCollection" Grid.Row="1" Grid.Column="0"/>

        </Grid>
    </ContentView.Content>



</ContentView>
