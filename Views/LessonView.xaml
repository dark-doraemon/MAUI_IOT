<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUI_IOT.Views.LessonView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:viewmodel="clr-namespace:MAUI_IOT.ViewModels"
    Title="LessonView"
    x:DataType="viewmodel:LessonViewModel">

    <ContentPage.BindingContext>
        <viewmodel:LessonViewModel />
    </ContentPage.BindingContext>


    <ContentPage.Content>
        <material:TabView>
            <material:TabItem Title="Experiment">
                <material:TabItem.ContentTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="50" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>

                            <Label
                                Grid.Row="0"
                                FontSize="Large"
                                HorizontalOptions="Center"
                                Text="{Binding Lesson.LessonName}" />

                            <VerticalStackLayout Grid.Row="1" Margin="10,0,0,0">
                                <HorizontalStackLayout>
                                    <Label Text="x" WidthRequest="150" />
                                    <Label
                                        x:Name="lbl_x"
                                        Text="{Binding ADXL345Axis.x}"
                                        WidthRequest="150" />
                                </HorizontalStackLayout>

                                <HorizontalStackLayout>
                                    <Label Text="y" WidthRequest="150" />
                                    <Label
                                        x:Name="lbl_y"
                                        Text="{Binding ADXL345Axis.y}"
                                        WidthRequest="150" />
                                </HorizontalStackLayout>

                                <HorizontalStackLayout>
                                    <Label Text="z" WidthRequest="150" />
                                    <Label
                                        x:Name="lbl_z"
                                        Text="{Binding ADXL345Axis.z}"
                                        WidthRequest="150" />
                                </HorizontalStackLayout>

                            </VerticalStackLayout>

                            <lvc:CartesianChart
                                Grid.Row="2"
                                Series="{Binding SeriesX}"
                                DrawMarginFrame="{Binding Frame}"
                                XAxes="{Binding XAxes}"
                                YAxes="{Binding YAxes}"
                                ZoomMode="Both" />
                            <lvc:CartesianChart
                                Grid.Row="3"
                                Series="{Binding SeriesY}"
                                DrawMarginFrame="{Binding Frame}"
                                XAxes="{Binding XAxes}"
                                YAxes="{Binding YAxes}"
                                ZoomMode="Both" />
                            <lvc:CartesianChart
                                Grid.Row="4"
                                Series="{Binding SeriesZ}"
                                DrawMarginFrame="{Binding Frame}"
                                XAxes="{Binding XAxes}"
                                YAxes="{Binding YAxes}"
                                ZoomMode="Both" />

                            <StackLayout
                                Grid.Row="5"
                                HorizontalOptions="CenterAndExpand"
                                Orientation="Horizontal"
                                Spacing="30"
                                VerticalOptions="EndAndExpand">
                                <Button Command="{Binding StartCommand}" Text="Start" />
                                <Button Command="{Binding StopCommand}" Text="Stop" />
                                <Button Command="{Binding SaveCommand}" Text="Save" />
                            </StackLayout>
                        </Grid>
                    </DataTemplate>
                </material:TabItem.ContentTemplate>
            </material:TabItem>


            <material:TabItem Title="Input Parameters">
                <material:TabItem.ContentTemplate>
                    <DataTemplate>
                        <ScrollView Orientation="Both">
                            <VerticalStackLayout>
                                <HorizontalStackLayout Padding="5">
                                    <Label Text="m" WidthRequest="50" FontSize="Medium" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                                    <Entry TextColor="Red" Text="Enter M" />
                                </HorizontalStackLayout>

                                <HorizontalStackLayout Padding="5">
                                    <Label Text="t" WidthRequest="50" FontSize="Medium" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                                    <Entry TextColor="Red" Text="Enter T" />
                                </HorizontalStackLayout>

                                <HorizontalStackLayout Padding="5">
                                    <Label Text="s" WidthRequest="50" FontSize="Medium" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                                    <Entry TextColor="Red" Text="Enter S" />
                                </HorizontalStackLayout>

                                <Button Text="Set" FontAttributes="Bold" WidthRequest="60"></Button>
                            </VerticalStackLayout>
                        </ScrollView> 
                        
                    </DataTemplate>
                </material:TabItem.ContentTemplate>
            </material:TabItem>



            <material:TabItem Title="Table">
                <material:TabItem.ContentTemplate>
                    <DataTemplate>
                        <ScrollView Orientation="Both" Padding="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>

                                <!-- Headers -->
                                <Label Text="time" FontSize="Large" FontAttributes="Bold" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" Grid.Row="0" Grid.Column="0" Padding="25" />
                                <Label Text="v (m/s)" FontSize="Large" FontAttributes="Bold" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" Grid.Row="0" Grid.Column="1" Padding="25" />
                                <Label Text="a (m/s^2)" FontSize="Large" FontAttributes="Bold" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" Grid.Row="0" Grid.Column="2" Padding="25" />

                                <!-- Row 1 -->
                                <Label Text="0.000" FontSize="Large" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" Grid.Row="1" Grid.Column="0" Padding="25" />
                                <Label Text="0.000" FontSize="Large" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" Grid.Row="1" Grid.Column="1" Padding="25" />
                                <Label Text="0.000" FontSize="Large" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" Grid.Row="1" Grid.Column="2" Padding="25" />

                                <!-- Row 2 -->
                                <Label Text="0.050" FontSize="Large" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" Grid.Row="2" Grid.Column="0" Padding="25" />
                                <Label Text="3.015" FontSize="Large" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" Grid.Row="2" Grid.Column="1" Padding="25" />
                                <Label Text="4.514" FontSize="Large" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" Grid.Row="2" Grid.Column="2" Padding="25" />
                                
                                <!-- Row 3 -->
                                <Label Text="0.050" FontSize="Large" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" Grid.Row="2" Grid.Column="0" Padding="25" />
                                <Label Text="3.015" FontSize="Large" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" Grid.Row="2" Grid.Column="1" Padding="25" />
                                <Label Text="4.514" FontSize="Large" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" Grid.Row="2" Grid.Column="2" Padding="25" />


                                <!-- Borders -->
                                <BoxView Color="Black" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" WidthRequest="1" HorizontalOptions="End" />
                                <BoxView Color="Black" Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" WidthRequest="1" HorizontalOptions="End" />
                                <BoxView Color="Black" Grid.Row="0" Grid.Column="2" Grid.RowSpan="3" WidthRequest="1" HorizontalOptions="End" />
                                <BoxView Color="Black" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" HeightRequest="1" VerticalOptions="End" />
                                <BoxView Color="Black" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" HeightRequest="1" VerticalOptions="End" />
                                <BoxView Color="Black" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" HeightRequest="1" VerticalOptions="End" />
                            </Grid>
                        </ScrollView>
                    </DataTemplate>
                </material:TabItem.ContentTemplate>
            </material:TabItem>

        </material:TabView>
    </ContentPage.Content>
</ContentPage>