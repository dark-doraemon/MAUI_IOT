                <Grid  x:Name="TongHop" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" IsVisible="{Binding IsCheckedSummary}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
