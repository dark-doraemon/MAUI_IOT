                                <Label Grid.Column="2" Text="{Binding Y, StringFormat='{0:F2}'}" HorizontalOptions="Center" VerticalOptions="Center"/>
                                <Label Grid.Column="3" Text="{Binding Z, StringFormat='{0:F2}'}" HorizontalOptions="Center" VerticalOptions="Center"/>
                                <Label Grid.Column="4" Text="{Binding A, StringFormat='{0:F2}'}" HorizontalOptions="Center" VerticalOptions="Center"/>
                                <Label Grid.Column="5" Text="{Binding F, StringFormat='{0:F2}'}" HorizontalOptions="Center" VerticalOptions="Center"/>
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>-->
            </Grid>

        </material:TabItem>

    </material:TabView>








</ContentPage>