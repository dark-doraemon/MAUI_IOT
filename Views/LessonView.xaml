<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUI_IOT.Views.LessonView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUI_IOT.Views"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:viewmodel="clr-namespace:MAUI_IOT.ViewModels"
    xmlns:model="clr-namespace:MAUI_IOT.Models"
    Title="LessonView"
    x:DataType="viewmodel:LessonnViewModel">
    
    
    <ContentPage.BindingContext>
        <viewmodel:LessonnViewModel />
    </ContentPage.BindingContext>

    <material:TabView x:Name="tab_View">

        <material:TabItem Title="Experiment" x:Name="Experiment" >
            <ScrollView Orientation="Vertical" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="300" />
                        <RowDefinition Height="300" />
                        <RowDefinition Height="300" />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>

                    <!--<Label Grid.Row="0" FontSize="Large" HorizontalOptions="Center" Text="{Binding Lesson.LessonName}" />-->

                    <!--<VerticalStackLayout Grid.Row="1" Margin="10,0,0,0">
                        <HorizontalStackLayout>
                            <Label Text="x" WidthRequest="150" />
                            <Label x:Name="lbl_x" Text="{Binding ADXL345Axis.x}" WidthRequest="150" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout>
                            <Label Text="y" WidthRequest="150" />
                            <Label x:Name="lbl_y" Text="{Binding ADXL345Axis.y}" WidthRequest="150" />
                        </HorizontalStackLayout>

                        <HorizontalStackLayout>
                            <Label Text="z" WidthRequest="150" />
                            <Label x:Name="lbl_z" Text="{Binding ADXL345Axis.z}" WidthRequest="150" />
                        </HorizontalStackLayout>

                    </VerticalStackLayout>-->

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <lvc:CartesianChart x:Name="chart_1"
                                       
                                        Grid.Column="0"
                                        SyncContext="{Binding Sync}"
                                        Series="{Binding new_Series}"
                                        XAxes="{Binding newXAxes}"
                                        ZoomMode="None" />
                                        <!--DrawMarginFrame="{Binding Frame}"-->


                        <Button Grid.Column="1"
                                        HeightRequest="50"
                                        WidthRequest="50">
                            <!--Command="{Binding ZoomCommand}"
                                        CommandParameter="{Binding SeriesX}">-->
                            <Button.ImageSource>
                                <FontImageSource FontFamily="FontAwesome"
                                                        Glyph="&#x1F50D;"
                                                        Size="30" />
                            </Button.ImageSource>
                        </Button>
                    </Grid>


                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <lvc:CartesianChart x:Name="chart_2"
                                        Grid.Column="0"
                                        ZoomMode="None" />
                                        <!--DrawMarginFrame="{Binding Frame}"
                                        Series="{Binding SeriesY}"
                                        XAxes="{Binding XAxes}"
                                        YAxes="{Binding YAxes}"-->



                        <Button Grid.Column="1"
                            HeightRequest="50"
                            WidthRequest="50">
                            <!--Command="{Binding ZoomCommand}"
                            CommandParameter="{Binding SeriesY}">-->
                            <Button.ImageSource>
                                <FontImageSource
                                    FontFamily="FontAwesome"
                                    Glyph="&#x1F50D;"
                                    Size="30" />
                            </Button.ImageSource>
                        </Button>
                    </Grid>


                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <lvc:CartesianChart x:Name="chart_3"
                                                Grid.Column="0"
                                                ZoomMode="None" />
                                                <!--DrawMarginFrame="{Binding Frame}"
                                                Series="{Binding SeriesZ}"
                                                XAxes="{Binding XAxes}"
                                                YAxes="{Binding YAxes}"-->

                        <Button Grid.Column="1"
                                    HeightRequest="50"
                                    WidthRequest="50">
                            <!--Command="{Binding ZoomCommand}"
                                    CommandParameter="{Binding SeriesZ}">-->
                            <Button.ImageSource>
                                <FontImageSource
                                    FontFamily="FontAwesome"
                                    Glyph="&#x1F50D;"
                                    Size="30" />
                            </Button.ImageSource>
                        </Button>
                    </Grid>

                    <StackLayout
                        Grid.Row="5"
                        HorizontalOptions="CenterAndExpand"
                        Orientation="Horizontal"
                        Spacing="30"
                        VerticalOptions="EndAndExpand">

                        <Button Command="{Binding StartButtonCommand}" x:Name="btn_Start" />
                        <!--Text="Start" IsEnabled="{Binding IsEnableButtonStart}"
                                    BackgroundColor="{Binding ColorButtonStart}"/>-->

                            <!--<Button Command="{Binding OnStopCommand }" x:Name="btn_Stop" 
                                    Text="Stop" IsEnabled="{Binding IsEnableButtonStop}" 
                                    BackgroundColor="{Binding ColorButtonStop}"/>

                            <Button Command="{Binding OnSaveCommand}" x:Name="btn_Save"
                                    Text="Save" IsEnabled="{Binding IsEnableButtonSave}"
                                    BackgroundColor="{Binding ColorButtonSave}"/>-->
                    </StackLayout>
                </Grid>
            </ScrollView>
        </material:TabItem>

        <material:TabItem Title="All" x:Name="All">

            <!--<Grid Margin="10" x:Name="grid_Chart"> --><!--IsEnabled="{Binding IsEnableTabAll}--><!--
                <Grid.RowDefinitions>
                    <RowDefinition Height="15*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <lvc:CartesianChart Grid.Row="0"
                                    x:Name="chart_All"
                                    DrawMarginFrame="{Binding Frame}"
                                    Series="{Binding Series}"
                                    Sections="{Binding Sections}"
                                    PressedCommand="{Binding PointerDownCommand}"
                                    ReleasedCommand="{Binding PointerUpCommand}"
                                    MovedCommand="{Binding PointerMoveCommand}"
                                    TooltipPosition="Hidden"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding YAxes}"
                                    ZoomMode="None"/>

                <Button Grid.Row="1"
                        x:Name="selectChartAll"
                        Command="{Binding SelectingChartCommand}"
                        Text="{Binding TextButtonSelect}"/>
                --><!--Command="{Binding SelectRangeCommand}"/>-->
                        <!--Clicked="OnClick"--><!--
            </Grid>-->


           
        </material:TabItem>

        <material:TabItem Title="Input Parameters" x:Name="inputParameters">

            <ScrollView Orientation="Both">
                <VerticalStackLayout>
                    <HorizontalStackLayout Padding="5">
                        <Label FontAttributes="Bold"
                        FontSize="Medium"
                        Text="m: "
                        VerticalTextAlignment="Center"
                        WidthRequest="50" />
                        
                        <Entry x:Name="weight_entry" 
                        Text="0" 
                        Placeholder="Nhập khối lượng: " 
                        TextColor="Red"
                        Keyboard="Numeric"/>
                    </HorizontalStackLayout>



                    <Button x:Name="weight"
                            FontAttributes="Bold"
                            Text="Set"                                  
                            WidthRequest="60"/>
                    <!--Command="{Binding SetWeightCommand}"/>-->
                    <!--Clicked="Handle_Set"/>-->
                </VerticalStackLayout>
            </ScrollView>


        </material:TabItem>

        <material:TabItem Title="Table" x:Name="table_results" IsVisible="True" >
            <Grid VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
                <!-- Define row definitions: one for header and one for data items -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!-- Header row -->
                    <RowDefinition Height="*" />
                    <!-- Data rows -->
                </Grid.RowDefinitions>

                <!-- Define columns that fill the entire width -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Header row content -->
                <Grid Grid.Row="0" ColumnSpan="3" BackgroundColor="LightGray" Padding="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Text="Time" HorizontalOptions="Center" VerticalOptions="Center" />
                    <Label Grid.Column="1" Text="X" HorizontalOptions="Center" VerticalOptions="Center" />
                    <Label Grid.Column="2" Text="Y" HorizontalOptions="Center" VerticalOptions="Center" />
                    <Label Grid.Column="3" Text="Z" HorizontalOptions="Center" VerticalOptions="Center" />
                    <Label Grid.Column="4" Text="A" HorizontalOptions="Center" VerticalOptions="Center" />
                    <Label Grid.Column="5" Text="F" HorizontalOptions="Center" VerticalOptions="Center" />
                </Grid>

                <!-- CollectionView for data items -->
                <!--<CollectionView Grid.Row="1" Grid.ColumnSpan="3" ItemsSource="{Binding Datas}" x:Name="table_data">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="model:Data">
                            <Grid Padding="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" Text="{Binding Time, StringFormat='{0:ss}'}" HorizontalOptions="Center" VerticalOptions="Center"/>
