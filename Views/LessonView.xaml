<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUI_IOT.Views.LessonView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
    xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
    xmlns:viewmodel="clr-namespace:MAUI_IOT.ViewModels"
    Title="LessonView"
    x:DataType="viewmodel:LessonViewModel">

    <ContentPage.BindingContext>
        <viewmodel:LessonViewModel />
    </ContentPage.BindingContext>


    <ContentPage.Content>
        <material:TabView>
            <material:TabItem Title="Experiment">
                <material:TabItem.ContentTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="50" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="50" />
                            </Grid.RowDefinitions>

                            <Label
                                Grid.Row="0"
                                FontSize="Large"
                                HorizontalOptions="Center"
                                Text="{Binding Lesson.LessonName}" />

                            <VerticalStackLayout Grid.Row="1" Margin="10,0,0,0">
                                <HorizontalStackLayout>
                                    <Label Text="x" WidthRequest="150" />
                                    <Label
                                        x:Name="lbl_x"
                                        Text="{Binding ADXL345Axis.x}"
                                        WidthRequest="150" />
                                </HorizontalStackLayout>

                                <HorizontalStackLayout>
                                    <Label Text="y" WidthRequest="150" />
                                    <Label
                                        x:Name="lbl_y"
                                        Text="{Binding ADXL345Axis.y}"
                                        WidthRequest="150" />
                                </HorizontalStackLayout>

                                <HorizontalStackLayout>
                                    <Label Text="z" WidthRequest="150" />
                                    <Label
                                        x:Name="lbl_z"
                                        Text="{Binding ADXL345Axis.z}"
                                        WidthRequest="150" />
                                </HorizontalStackLayout>

                            </VerticalStackLayout>

                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <lvc:CartesianChart
                                    Grid.Column="0"
                                    DrawMarginFrame="{Binding Frame}"
                                    Series="{Binding SeriesX}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding YAxes}"
                                    ZoomMode="None" />

                                <Button
                                    Grid.Column="1"
                                    HeightRequest="50"
                                    WidthRequest="50"
                                    Command="{Binding ZoomCommand}"
                                    CommandParameter="{Binding SeriesX}"
                                    >
                                    <Button.ImageSource>
                                        <FontImageSource
                                            FontFamily="FontAwesome"
                                            Glyph="&#x1F50D;"
                                            Size="30" />
                                    </Button.ImageSource>
                                </Button>
                            </Grid>


                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <lvc:CartesianChart
                                    Grid.Column="0"
                                    DrawMarginFrame="{Binding Frame}"
                                    Series="{Binding SeriesY}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding YAxes}"
                                    ZoomMode="None" />

                                <Button
                                    Grid.Column="1"
                                    HeightRequest="50"
                                    WidthRequest="50"
                                    Command="{Binding ZoomCommand}"
                                    CommandParameter="{Binding SeriesY}"
                                    >
                                    <Button.ImageSource>
                                        <FontImageSource
                                            FontFamily="FontAwesome"
                                            Glyph="&#x1F50D;"
                                            Size="30" />
                                    </Button.ImageSource>
                                </Button>
                            </Grid>


                            <Grid Grid.Row="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <lvc:CartesianChart
                                    Grid.Column="0"
                                    DrawMarginFrame="{Binding Frame}"
                                    Series="{Binding SeriesZ}"
                                    XAxes="{Binding XAxes}"
                                    YAxes="{Binding YAxes}"
                                    ZoomMode="None" />

                                <Button
                                    Grid.Column="1"
                                    HeightRequest="50"
                                    WidthRequest="50"
                                    Command="{Binding ZoomCommand}"
                                    CommandParameter="{Binding SeriesZ}"
                                    >
                                    <Button.ImageSource>
                                        <FontImageSource
                                            FontFamily="FontAwesome"
                                            Glyph="&#x1F50D;"
                                            Size="30" />
                                    </Button.ImageSource>
                                </Button>
                            </Grid>

                            <StackLayout
                                Grid.Row="5"
                                HorizontalOptions="CenterAndExpand"
                                Orientation="Horizontal"
                                Spacing="30"
                                VerticalOptions="EndAndExpand">
                                <Button Command="{Binding StartCommand}" Text="Start" />
                                <Button Command="{Binding StopCommand}" Text="Stop" />
                                <Button Command="{Binding SaveCommand}" Text="Save" />
                            </StackLayout>
                        </Grid>
                    </DataTemplate>
                </material:TabItem.ContentTemplate>
            </material:TabItem>

            <material:TabItem Title="All">
                <material:TabItem.ContentTemplate>
                    <DataTemplate>
                        <lvc:CartesianChart
                            DrawMarginFrame="{Binding Frame}"
                            Series="{Binding Series}"
                            TooltipPosition="Hidden"
                            XAxes="{Binding XAxes}"
                            YAxes="{Binding YAxes}" />
                    </DataTemplate>
                </material:TabItem.ContentTemplate>
            </material:TabItem>

            <material:TabItem Title="Input Parameters">
                <material:TabItem.ContentTemplate>
                    <DataTemplate>
                        <ScrollView Orientation="Both">
                            <VerticalStackLayout>
                                <HorizontalStackLayout Padding="5">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="Medium"
                                        Text="m"
                                        VerticalTextAlignment="Center"
                                        WidthRequest="50" />
                                    <Entry Text="Enter M" TextColor="Red" />
                                </HorizontalStackLayout>

                                <HorizontalStackLayout Padding="5">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="Medium"
                                        Text="t"
                                        VerticalTextAlignment="Center"
                                        WidthRequest="50" />
                                    <Entry Text="Enter T" TextColor="Red" />
                                </HorizontalStackLayout>

                                <HorizontalStackLayout Padding="5">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="Medium"
                                        Text="s"
                                        VerticalTextAlignment="Center"
                                        WidthRequest="50" />
                                    <Entry Text="Enter S" TextColor="Red" />
                                </HorizontalStackLayout>

                                <Button
                                    FontAttributes="Bold"
                                    Text="Set"
                                    WidthRequest="60" />
                            </VerticalStackLayout>
                        </ScrollView>

                    </DataTemplate>
                </material:TabItem.ContentTemplate>
            </material:TabItem>

            <material:TabItem Title="Table">
                <material:TabItem.ContentTemplate>
                    <DataTemplate>
                        <ScrollView Padding="10" Orientation="Both">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                    <RowDefinition Height="auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>

                                <!--  Headers  -->
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Padding="25"
                                    FontAttributes="Bold"
                                    FontSize="Large"
                                    HorizontalTextAlignment="Center"
                                    Text="time"
                                    VerticalTextAlignment="Center" />
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Padding="25"
                                    FontAttributes="Bold"
                                    FontSize="Large"
                                    HorizontalTextAlignment="Center"
                                    Text="v (m/s)"
                                    VerticalTextAlignment="Center" />
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Padding="25"
                                    FontAttributes="Bold"
                                    FontSize="Large"
                                    HorizontalTextAlignment="Center"
                                    Text="a (m/s^2)"
                                    VerticalTextAlignment="Center" />

                                <!--  Row 1  -->
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Padding="25"
                                    FontSize="Large"
                                    HorizontalTextAlignment="Center"
                                    Text="0.000"
                                    VerticalTextAlignment="Center" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Padding="25"
                                    FontSize="Large"
                                    HorizontalTextAlignment="Center"
                                    Text="0.000"
                                    VerticalTextAlignment="Center" />
                                <Label
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    Padding="25"
                                    FontSize="Large"
                                    HorizontalTextAlignment="Center"
                                    Text="0.000"
                                    VerticalTextAlignment="Center" />

                                <!--  Row 2  -->
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Padding="25"
                                    FontSize="Large"
                                    HorizontalTextAlignment="Center"
                                    Text="0.050"
                                    VerticalTextAlignment="Center" />
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Padding="25"
                                    FontSize="Large"
                                    HorizontalTextAlignment="Center"
                                    Text="3.015"
                                    VerticalTextAlignment="Center" />
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    Padding="25"
                                    FontSize="Large"
                                    HorizontalTextAlignment="Center"
                                    Text="4.514"
                                    VerticalTextAlignment="Center" />

                                <!--  Row 3  -->
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Padding="25"
                                    FontSize="Large"
                                    HorizontalTextAlignment="Center"
                                    Text="0.050"
                                    VerticalTextAlignment="Center" />
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Padding="25"
                                    FontSize="Large"
                                    HorizontalTextAlignment="Center"
                                    Text="3.015"
                                    VerticalTextAlignment="Center" />
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    Padding="25"
                                    FontSize="Large"
                                    HorizontalTextAlignment="Center"
                                    Text="4.514"
                                    VerticalTextAlignment="Center" />


                                <!--  Borders  -->
                                <BoxView
                                    Grid.Row="0"
                                    Grid.RowSpan="3"
                                    Grid.Column="0"
                                    HorizontalOptions="End"
                                    WidthRequest="1"
                                    Color="Black" />
                                <BoxView
                                    Grid.Row="0"
                                    Grid.RowSpan="3"
                                    Grid.Column="1"
                                    HorizontalOptions="End"
                                    WidthRequest="1"
                                    Color="Black" />
                                <BoxView
                                    Grid.Row="0"
                                    Grid.RowSpan="3"
                                    Grid.Column="2"
                                    HorizontalOptions="End"
                                    WidthRequest="1"
                                    Color="Black" />
                                <BoxView
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    HeightRequest="1"
                                    VerticalOptions="End"
                                    Color="Black" />
                                <BoxView
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    HeightRequest="1"
                                    VerticalOptions="End"
                                    Color="Black" />
                                <BoxView
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    HeightRequest="1"
                                    VerticalOptions="End"
                                    Color="Black" />
                            </Grid>
                        </ScrollView>
                    </DataTemplate>
                </material:TabItem.ContentTemplate>
            </material:TabItem>

        </material:TabView>
    </ContentPage.Content>
</ContentPage>